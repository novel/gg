#!/usr/bin/env python

"""A tool to list available images, doesn't need any arguments"""

import getopt
import sys

from GoGridManager import GoGridManager
from GoGridClient import Error403

if __name__ == "__main__":
    account = "default"

    try:
        opts, args = getopt.getopt(sys.argv[1:], "p:")
    except getopt.GetoptError, err:
        print str(err)
        sys.exit(2)

    for o, a in opts:
        if o == "-p":
            account = a

    manager = GoGridManager(account=account)

    try:
        images = manager.get_images()
    except (Error403,), e:
        print e
        sys.exit(2)

    for image in images:
        print image.friendlyName, image.isActive, image.id
